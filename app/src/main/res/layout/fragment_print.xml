<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <!--左边-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_print_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg"
            android:padding="10dp"
            android:text="查看打印机信息"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <!--显示usb设备信息-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_print_show_printer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp" />


        </ScrollView>


    </LinearLayout>


    <!--右边-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--初始化打印机-->
                <Button
                    android:id="@+id/btn_print_init"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_bg"
                    android:padding="10dp"
                    android:text="初始化打印机"
                    android:textColor="#ffffff"
                    android:textSize="30sp" />

                <!--打印机信息-->
                <Button
                    android:id="@+id/btn_print_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_bg"
                    android:padding="10dp"
                    android:text="打印机信息"
                    android:textColor="#ffffff"
                    android:textSize="30sp" />

                <!--打印机浓度-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_print_concentration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btn_bg"
                        android:padding="10dp"
                        android:text="打印机浓度"
                        android:textColor="#ffffff"
                        android:textSize="30sp" />

                    <Spinner
                        android:id="@+id/sp_print_concentration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:dropDownVerticalOffset="50dp">

                    </Spinner>

                </LinearLayout>


                <!--打印订单信息-->
                <Button
                    android:id="@+id/btn_print_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_bg"
                    android:padding="10dp"
                    android:text="打印订单信息"
                    android:textColor="#ffffff"
                    android:textSize="30sp" />

                <!--打印条码-->
                <Button
                    android:id="@+id/brn_print_bar_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_bg"
                    android:padding="10dp"
                    android:text="打印条码"
                    android:textColor="#ffffff"
                    android:textSize="30sp" />

                <!--打印二维码-->
                <Button
                    android:id="@+id/btn_print_qr_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_bg"
                    android:padding="10dp"
                    android:text="打印二维码"
                    android:textColor="#ffffff"
                    android:textSize="30sp" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</LinearLayout>