<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:id="@+id/sl"
        android:layout_width="384px"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="384px"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_toRightOf="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/grey3"
                    android:textSize="@dimen/size1"
                    android:text="@string/sales_slip"
                    />

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/grey3"
                android:textSize="@dimen/size2"
                android:layout_gravity="right"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/imaginary_line"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/grey3"
                android:textSize="@dimen/size2"
                android:text="@string/merchant_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/grey3"
                android:textSize="@dimen/size2"
                android:text="@string/merchant_no"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/grey3"
                    android:textSize="@dimen/size2"
                    android:text="@string/terminal_number"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/grey3"
                    android:textSize="@dimen/size2"
                    android:text="@string/operator"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/grey3"
                    android:textSize="@dimen/size2"
                    android:text="00000003"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/grey3"
                    android:textSize="@dimen/size2"
                    android:text="05"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/grey3"
                android:textSize="@dimen/size2"
                android:text="@string/card_no"
                />

            <TextView
                android:id="@+id/tv_card_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/grey3"
                android:textSize="@dimen/size1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/grey3"
                android:textSize="@dimen/size4"
                android:text="@string/trade_type"
                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/grey3"
                    android:textSize="@dimen/size2"
                    android:text="@string/batch_number"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/grey3"
                    android:textSize="@dimen/size2"
                    android:text="@string/voucher_numbe"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/grey3"
                    android:textSize="@dimen/size2"
                    android:text="002202"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/grey3"
                    android:textSize="@dimen/size2"
                    android:text="000008"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/grey3"
                    android:textSize="@dimen/size2"
                    android:text="@string/authorization_code"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/grey3"
                    android:textSize="@dimen/size2"
                    android:layout_alignParentRight="true"
                    android:text="@string/reference_number"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/grey3"
                    android:textSize="@dimen/size2"
                    android:text="987633"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/grey3"
                    android:textSize="@dimen/size2"
                    android:layout_alignParentRight="true"
                    android:text="6159092832567"
                    />

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/grey3"
                android:textSize="@dimen/size1"
                android:text="@string/amount"
                />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/grey3"
                android:layout_gravity="right"
                android:textSize="@dimen/size1"
                />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/grey3"
                android:textSize="@dimen/size3"
                android:text="@string/date_time"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/grey3"
                android:textSize="@dimen/size2"
                android:text="@string/remark"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                >

                <View
                    android:layout_toLeftOf="@+id/tv_user"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/imaginary_line"
                    />

                <TextView
                    android:id="@+id/tv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey3"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textSize="@dimen/size2"
                    android:text="@string/user_signature"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_toRightOf="@+id/tv_user"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/imaginary_line"
                    />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/imaginary_line"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/grey3"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/size3"
                android:text="@string/i_confirm"
                />

            <View
                android:layout_width="wrap_content"
                android:layout_height="120px"
                android:background="@color/white"
                />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/print"
        />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/no_print"
        />

</RelativeLayout>
